{
  "name": "qilife-one",
  "version": "0.1.0",
  "main": "electron-app/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite --config vite.config.js",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "start": "electron .",
    "test": "jest",
    "test:watch": "jest --watch",
    "package": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "package:all": "npm run package:python && npm run package:electron && npm run create:installer",
    "package:python": "node scripts/package-python.js",
    "package:electron": "npm run build && node scripts/package-electron-manual.js",
    "create:installer": "node scripts/create-installer.js"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.0.0",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "wait-on": "^7.0.1",
    "jest": "^29.0.0",
    "archiver": "^6.0.1",
    "fs-extra": "^11.2.0"
  }
}
