{
  "name": "qilife-one",
  "version": "0.1.0",
  "main": "app/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite --config vite.config.js",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "start": "electron .",
    "test": "jest",
    "test:watch": "jest --watch",
    "package": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.0.0",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "wait-on": "^7.0.1",
    "jest": "^29.0.0"
  },
  "build": {
    "appId": "com.qilife.app",
    "productName": "QiLife One",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "app/main/**/*",
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
