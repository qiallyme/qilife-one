{
  "appId": "com.qilife.app",
  "productName": "QiLife One",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "electron-app/main/**/*",
    "dist/**/*",
    "node_modules/**/*"
  ],
  "extraResources": [
    {
      "from": "python-backend",
      "to": "python-backend"
    }
  ],
  "win": {
    "target": "portable"
  },
  "mac": {
    "target": "dmg"
  },
  "linux": {
    "target": "AppImage"
  },
  "portable": {
    "artifactName": "QiLife-One.exe"
  }
} 